-- Worker screenlayout verification
SELECT [ax].[RETAILSTAFFTABLE].STAFFID,
	   [ax].[RETAILTILLLAYOUT].layoutId
  FROM [ax].[RETAILSTAFFTABLE]
  join [ax].[RETAILTILLLAYOUTSTAFF] on 
  [ax].[RETAILTILLLAYOUTSTAFF].STAFF = [ax].[RETAILSTAFFTABLE].RECID
  join [ax].[RETAILTILLLAYOUT] on 
  [ax].[RETAILTILLLAYOUT].layoutId = [ax].[RETAILTILLLAYOUTSTAFF].LAYOUTID
  where STAFFID = '004525'
  or STAFFID = '004527'
  or STAFFID = '004531'
